// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id                 Int     @id @default(autoincrement())
  sku                String  @unique
  nombre             String
  precioFOB          Decimal
  gramaje            String
  paisOrigen         String
  cantidadPorCaja    Int
  
  // Campos nuevos
  cantidadPorDisplay Int     @default(0)
  moneda             String  @default("USD")
  proveedorId        Int     @default(0)
}

model Proveedor {
  id        Int     @id @default(autoincrement())
  nombre    String
  pais      String
  ejecutivo String
  email     String
  telefono  String
}