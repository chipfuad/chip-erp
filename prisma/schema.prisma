generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- PROVEEDOR (El "Padre" del producto) ---
model Proveedor {
  id        Int        @id @default(autoincrement())
  nombre    String     @unique // Nombre de la empresa
  pais      String?    // Origen (China, India, USA...)
  direccion String?    // Dirección física
  ejecutivo String?    // Nombre del contacto (Ej: Mr. Wang)
  email     String?    // Correo de contacto
  telefono  String?    // WhatsApp / WeChat
  
  // Relación: Un proveedor tiene muchos productos
  productos Producto[]
}

// --- PRODUCTO (El ítem que compras) ---
model Producto {
  id                 Int      @id @default(autoincrement())
  sku                String   @unique
  nombre             String
  
  // Detalle técnico y logístico
  gramaje            String?  
  cantidadPorCaja    Int?     
  cantidadPorDisplay Int?     
  precioFOB          Float?   
  paisOrigen         String?  // Puede ser distinto al del proveedor (trading)
  
  // Relación obligatoria o opcional con Proveedor
  proveedorId        Int?
  proveedor          Proveedor? @relation(fields: [proveedorId], references: [id])
}